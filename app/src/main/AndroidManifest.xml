<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.digitalzombielab.kenistoys">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KenisActivity"
            android:label="@string/title_activity_kenis"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.MainActivity" />
        </activity>
        <activity
            android:name=".ToysActivity"
            android:label="@string/title_activity_toys"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.MainActivity" />
        </activity>
        <activity
            android:name=".NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".ToysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>
        <activity
            android:name=".FichesActivity"
            android:label="@string/title_activity_fiches"
            android:parentActivityName=".ToysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>

        <receiver android:name=".AppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info" />
        </receiver>

        <activity
            android:name=".CountdownActivity"
            android:label="@string/title_activity_countdown"
            android:parentActivityName=".ToysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>
        <activity
            android:name=".PrimeNumberActivity"
            android:label="@string/title_activity_prime_number"
            android:parentActivityName=".ToysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>
        <activity
            android:name=".LevelActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_level"
            android:parentActivityName=".ToysActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>
        <activity
            android:name=".DrawActivity"
            android:label="@string/title_activity_draw"
            android:parentActivityName=".ToysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.digitalzombielab.kenistoys.ToysActivity" />
        </activity>
    </application>

</manifest>
